@model ElectronicJournalsApi.Models.Subject

@{
    ViewData["Title"] = "Создать предмет";
}
@{
    Layout = "_Layout";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create New Subject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Create.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<body>
    <div class="container mx-auto p-8">
        <div class="bg-white p-8 rounded-lg shadow-lg max-w-lg mx-auto">
            <h2 class="text-3xl font-bold mb-6 text-center text-secondary">Создание нового предмета</h2>
            <form id="createSubjectForm">
                <div class="mb-2">
                    <label for="name" class="block text-secondary font-semibold mb-1">Название <span class="required">*</span></label>
                    <input type="text" id="name" name="name" class="appearance-none border rounded w-full py-2 px-3 text-secondary leading-tight focus:outline-none" required>
                </div>
                <div class="mb-2">
                    <label for="fullName" class="block text-secondary font-semibold mb-1">Полное название</label>
                    <input type="text" id="fullName" name="fullName" class="appearance-none border rounded w-full py-2 px-3 text-secondary leading-tight focus:outline-none">
                </div>
                <div class="mb-2">
                    <label for="description" class="block text-secondary font-semibold mb-1">Описание</label>
                    <textarea id="description" name="description" class="appearance-none border rounded w-full py-2 px-3 text-secondary leading-tight focus:outline-none"></textarea>
                </div>
                <div class="mb-2">
                    <label for="duration" class="block text-secondary font-semibold mb-1">Длительность <span class="required">*</span></label>
                    <input type="number" id="duration" name="duration" class="appearance-none border rounded w-full py-2 px-3 text-secondary leading-tight focus:outline-none" required>
                </div>
                <div class="mb-2">
                    <label for="lessonLength" class="block text-secondary font-semibold mb-1">Академических часов <span class="required">*</span></label>
                    <input type="number" id="lessonLength" name="lessonLength" class="appearance-none border rounded w-full py-2 px-3 text-secondary leading-tight focus:outline-none" required>
                </div>
                <div class="mb-2">
                    <label for="lessonsCount" class="block text-secondary font-semibold mb-1">Количество уроков <span class="required">*</span></label>
                    <input type="number" id="lessonsCount" name="lessonsCount" class="appearance-none border rounded w-full py-2 px-3 text-secondary leading-tight focus:outline-none" required>
                </div>
                <div id="alert" class="alert mt-4"></div>
                <div class="flex items-center justify-between">
                    <div id="alert" class="alert mt-4"></div>
                    <button type="submit" class="tn btn-custom text-white px-4 py-2 rounded">
                        Добавить
                    </button>
                    <a href="/Subjects/Index" class="inline-block align-baseline font-bold text-sm text-accent hover:text-primary">
                        Вернуться к списку
                    </a>
                </div>
            </form>
        </div>
    </div>

    <script src="~/js/subjectCreate.js"></script>
</body>
