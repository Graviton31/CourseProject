@{
    ViewData["Title"] = "Журнал посещаимости";
}
@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/attendanceJournal.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid d-flex flex-column min-vh-100">
        <div class="row flex-grow">
            <!-- Sidebar -->
            <div class="col-md-3 bg-[#1A1D27] text-white p-4" id="subjects-sidebar">
                <h2 class="text-2xl font-bold mb-4">Предметы</h2>
                <ul id="subjects-list">
                    <!-- Динамически заполняем список предметов -->
                </ul>
            </div>
            <div class="col-md-9 p-4">
                <h2 class="text-4xl font-bold mb-4">Журнал посещаимости</h2>
                <div class="d-flex justify-content-between mb-2">
                    <div class="d-flex">
                        <button id="add-entry" class="btn btn-custom rounded p-2" style="display: none;">Добавить запись</button>
                    </div>
                    <div class="d-flex">
                        <button id="saveEntries" class="btn btn-save rounded p-2">Сохранить</button>
                    </div>
                </div>
                <div class="overflow-auto">
                    <table class="bg-white mb-4 table table-bordered w-100">
                        <thead class="thead-light">
                            <tr>
                                <th class="py-2 px-2 border-b number-column">#</th>
                                <th class="py-2 px-4 border-b student-column">Студент</th>
                                <!-- Новые столбцы будут добавляться здесь -->
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Данные о студентах -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Модальное окно для ввода даты -->
    <div class="modal fade" id="dateModal" tabindex="-1" role="dialog" aria-labelledby="dateModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="dateModalLabel">Выберите дату</h5>
                    <button id="closeModal" type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="dateInput">Дата</label>
                        <input type="date" class="form-control" id="dateInput">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-custom" id="addDateButton">Добавить</button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/attendanceJournal.js"></script>
</body>
</html>