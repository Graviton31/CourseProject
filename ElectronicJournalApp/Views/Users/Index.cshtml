@model IEnumerable<ElectronicJournalsApi.Models.User>

@{
    ViewData["Title"] = "Список пользователей";
}
@{
    Layout = "_Layout";
}
<head>
    <title>@ViewData["Title"]</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <style>
        
    </style>
</head>

<body>
    <div class="container mx-auto p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h2">Список пользователей</h1>
            <button id="CreateButton" onclick="window.location.href='/Users/Create'" class="btn btn-custom text-white px-4 py-2 rounded" style="display: none;">
                <i class="fas fa-user-plus"></i> Добавить пользователя
            </button>
        </div>
            <div class="div-custom p-4 rounded shadow-md">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead class="thead-light">
                            <tr>
                                <th class="text-center">@Html.DisplayName("ФИО")</th>
                                <th class="text-center">@Html.DisplayNameFor(model => model.First().Login)</th>
                                <th class="text-center">@Html.DisplayNameFor(model => model.First().Phone)</th>
                                <th class="text-center">@Html.DisplayNameFor(model => model.First().BirthDate)</th>
                                <th class="text-center">@Html.DisplayNameFor(model => model.First().Role)</th>
                                <th class="text-center">Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr id="user-row-@item.IdUsers">
                                        <td class="text-center">@($"{item.Surname} {item.Name} {item.Patronymic}")</td>
                                        <td class="text-center">@Html.DisplayFor(modelItem => item.Login)</td>
                                        <td class="text-center">@Html.DisplayFor(modelItem => item.Phone)</td>
                                        <td class="text-center">@Html.DisplayFor(modelItem => item.BirthDate)</td>
                                        <td class="text-center">@Html.DisplayFor(modelItem => item.Role)</td>
                                        <td class="text-center">
                                            <div class="d-flex justify-content-center">
                                                <button title="Удалить" class="deleteButton btn btn-danger btn-sm mx-1 btn-icon" onclick="deleteUser(@item.IdUsers); return confirm('Вы уверены, что хотите удалить этого пользователя?');">
                                                    <i class="fas fa-trash-alt"> Удалить</i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="text-center">Нет пользователей для отображения</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
    </div>
    <script src="~/js/site.js"></script>
    <script src="~/js/userIndex.js"></script>
</body>

